<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" verbose="4"
	thread-count="4" parallel="tests">


	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="113.0" />


		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<!-- <test name="Register Page Test"> <parameter name="browser" value="chrome" 
		/> <classes> <class name="com.qa.opencart.tests.RegisterPageTest" /> </classes> 
		</test> -->

	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="90.0" />

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Test">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="79.0" />

		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>


	<!-- <test name="Product Info Test">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="83.0" />

		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test> -->


</suite>