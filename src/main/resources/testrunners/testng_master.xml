<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" verbose="4"
	thread-count="4" parallel="tests">

	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test_edge">
		<parameter name="browser" value="edge" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Login Page Test_safari">
		<parameter name="browser" value="safari" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	
	

	<test name="Accounts Page Test">
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>

	<test name="Product Info Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test>


</suite>